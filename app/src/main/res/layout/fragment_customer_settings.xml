<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.customerView.CustomerSettingsFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Язык интерфейса"
                    android:padding="20dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:text="Русский язык"
                        android:textSize="13sp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@color/orange"/>
                    <Button
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:text="Казахский язык"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:background="@color/white"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:id="@+id/text_edit_profile"
                android:drawableRight="@drawable/ic_arrow_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Редактировать профиль"
                android:padding="20dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="PUSH уведомления"
                    android:layout_gravity="left|center"/>
                <android.support.v7.widget.SwitchCompat
                    android:layout_gravity="right|center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:theme="@style/ColorSwitchStyle"/>
            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Помощь и частые вопросы"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Правила сервиса"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Договор аферты"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Связь с разработчиками"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Оценить приложение"/>
                <TextView
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Поделиться с друзьями"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Выйти из профиля"
                    android:layout_gravity="left|center"/>
                <ImageButton
                    android:id="@+id/image_button_exit_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center"
                    android:background="@drawable/ic_exit"/>

            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>