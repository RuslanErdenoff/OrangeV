<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:translationY="@dimen/fragment_welcome_page_layout_translationY"
        android:background="@color/orange">

        <ImageView
            android:id="@+id/testImage"
            android:layout_width="@dimen/fragment_welcome_page_first_orange_female_magnifier_layout_width"
            android:layout_height="@dimen/fragment_welcome_page_first_orange_female_magnifier_layout_height"
            android:layout_gravity="bottom"
            android:scaleX="@dimen/fragment_welcome_page_first_orange_female_magnifier_scaleX"
            android:scaleY="@dimen/fragment_welcome_page_first_orange_female_magnifier_scaleY"
            android:translationX="@dimen/fragment_welcome_page_first_orange_female_magnifier_translationX"
            android:translationY="@dimen/fragment_welcome_page_first_orange_female_magnifier_translationY"
            app:srcCompat="@drawable/orange_female_magnifier" />

        <ImageView
            android:layout_width="@dimen/fragment_welcome_page_first_orange_male_side_layout_width"
            android:layout_height="@dimen/fragment_welcome_page_first_orange_male_side_layout_height"
            android:layout_gravity="top"
            android:rotation="@dimen/fragment_welcome_page_first_orange_male_side_rotation"
            android:scaleX="@dimen/fragment_welcome_page_first_orange_male_side_scaleX"
            android:scaleY="@dimen/fragment_welcome_page_first_orange_male_side_scaleY"
            android:translationX="@dimen/fragment_welcome_page_first_orange_male_side_translationX"
            android:translationY="@dimen/fragment_welcome_page_first_orange_male_side_translationY"
            app:srcCompat="@drawable/orange_male_side" />

        <TextView
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fragment_welcome_page_first_orange_text_view_layout_marginLeft"
            android:layout_marginTop="@dimen/fragment_welcome_page_first_orange_text_view_layout_marginTop"
            android:text="@string/welcome_page_one_info"
            android:textColor="@color/white"
            android:textSize="@dimen/fragment_welcome_page_text_view_text_size" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center"
            android:layout_marginLeft="@dimen/fragment_welcome_page_first_linearLayout_layout_marginLeft"
            android:layout_marginTop="@dimen/fragment_welcome_page_first_linearLayout_layout_marginTop"
            android:orientation="horizontal"
            app:srcCompat="@drawable/ic_orange_title_white" />
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

</LinearLayout>