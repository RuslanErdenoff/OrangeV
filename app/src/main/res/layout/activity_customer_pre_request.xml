<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.customerView.CustomerPreRequestActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/tool_bar"/>

        <RadioGroup
            android:id="@+id/radio_group_customer_pre_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

                <RadioButton
                    android:layout_gravity="left|center"
                    android:button="@drawable/radio_button_white_selector"
                    android:paddingLeft="15dp"
                    android:id="@+id/radio_button_customer_pre_request_to_consultant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Приехать к врачу"/>
                <RadioButton
                    android:layout_gravity="right|center"
                    android:button="@drawable/radio_button_white_selector"
                    android:paddingLeft="15dp"
                    android:id="@+id/radio_button_customer_pre_request_to_home"
                    android:layout_marginLeft="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Вызвать врача"/>
        </RadioGroup>

        <FrameLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/customer_pre_request_container"/>

    </LinearLayout>
</ScrollView>